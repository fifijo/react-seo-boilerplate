{
  "name": "react-ssr-boilerplate",
  "version": "1.0.1",
  "description": "React SSR Boilerplate",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/eslint -- ./",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "build": "npm-run-all webpack --config webpack.prod.js",
    "dev": "npm-run-all --parallel server client:dev",
    "prod": "npm-run-all --parallel server client:prod",
    "server": "nodemon index.js",
    "client:dev": "webpack --watch --config webpack.dev.js",
    "client:prod": "webpack --watch --config webpack.prod.js",
    "bundle-report": "webpack-bundle-analyzer --port 4200 dist/stats.json",
    "format": "prettier --write ./"
  },
  "author": "Krzysztof Perzanowski",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{js}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run test:unit"
    }
  },
  "devDependencies": {
    "@babel/core": "7.11.4",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-modules-commonjs": "7.10.4",
    "@babel/plugin-transform-runtime": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/register": "7.10.5",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "babel-plugin-transform-dynamic-import": "2.1.0",
    "clean-webpack-plugin": "3.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "enzyme-to-json": "3.6.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "jest": "26.4.2",
    "jest-prop-type-error": "^1.1.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "0.10.0",
    "node-sass": "4.14.1",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "path": "0.12.7",
    "prettier": "^2.1.0",
    "prettier-eslint-cli": "^5.0.0",
    "redux-devtools-extension": "2.13.8",
    "redux-mock-store": "1.5.4",
    "uuid": "^8.3.0",
    "webpack": "4.44.1",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-cli": "3.3.12",
    "webpack-merge": "5.1.2",
    "webpack-node-externals": "2.5.2"
  },
  "dependencies": {
    "@babel/runtime": "7.11.2",
    "express": "4.17.1",
    "isomorphic-fetch": "2.2.1",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "6.1.0",
    "react-redux": "7.2.1",
    "react-router-dom": "5.2.0",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "styled-components": "5.1.1"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "<rootDir>__tests__/setup/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
